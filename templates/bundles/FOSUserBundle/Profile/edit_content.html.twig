{% trans_default_domain 'FOSUserBundle' %}

<main class="edit-profile">
  <section class="profile-form">
    <header class="profile-form__header">
      <div class="profile-form__avatar-container">
        <img src="{{ vich_uploader_asset(app.user)|default(asset('assets/images/profile.jpg')) }}" class="profile-form__avatar">
      </div>
      <h4 class="profile-form__title">{{ app.user.username }}</h4>
    </header>
    {{ form_start(form, { 'action': path('fos_user_profile_edit')}) }}
    {{ form_widget(form) }}
    <div class="edit-profile__form-row">
      <label class="edit-profile__label"></label>
      <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />    </div>
    <div>
    {{ form_end(form) }}
  </section>
</main>
